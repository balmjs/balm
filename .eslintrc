{
  "root": true,
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "globals": {
    "path": true,
    "gulp": true,
    "$": true,
    "browserSync": true,
    "del": true,
    "webpack": true,
    "BalmJS": true,
    "config": true,
    "logger": true
  },
  "extends": [
    "eslint:recommended",
    "xo-space"
  ],
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "space-before-function-paren": [2, "never"],
    "operator-linebreak": [2, "after"]
  }
}

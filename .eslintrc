{
  "root": true,
  "parser": "babel-eslint",
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "xo-space"
  ],
  "globals": {
    "path": true,
    "gulp": true,
    "$": true,
    "browserSync": true,
    "del": true,
    "webpack": true,
    "BalmJS": true,
    "config": true,
    "logger": true
  },
  "rules": {
    "quotes": ["error", "single"],
    "space-before-function-paren": 0,
    "operator-linebreak": ["error", "after", {
      "overrides": {
        "?": "ignore",
        ":": "ignore"
      }
    }],
    "no-compare-neg-zero": 0
  }
}

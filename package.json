  "scripts": {
    "build": "gulp prepublish && rimraf packages/balm-core/tslib && tsc",
    "test": "cross-env NODE_ENV=test TS_NODE_PROJECT=test/tsconfig.json TS_NODE_FILES=true nyc mocha",

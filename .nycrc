{
  "extension": [
    ".ts"
  ],
  "include": [
    "packages/core/src/**/*.ts",
    "!packages/core/src/config/env.ts",
    "!packages/core/src/tasks/index.ts",
    "!packages/core/src/tasks/private/sprite.ts",
    "!packages/core/src/tasks/private/modernizr.ts",
    "!packages/core/src/tasks/public/server.ts",
    "!packages/core/src/middlewares/index.ts",
    "!packages/core/src/plugins/*.ts",
    "!packages/core/src/utilities/address.ts",
    "!packages/core/src/utilities/detect-port.ts",
    "!packages/core/src/utilities/escape-string-regexp.ts",
    "!packages/core/src/utilities/merge-stream.ts",
    "!packages/core/src/utilities/replacestream.ts"
  ],
  "exclude": [
    "node_modules/**",
    "coverage/**",
    "packages/core/types/**/*.d.ts",
    "test/**/*.spec.ts"
  ],
  "reporter": [
    "lcov",
    "text",
    "text-summary"
  ]
}
